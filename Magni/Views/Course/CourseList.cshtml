@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}



<!--Start Courses Area Section-->
<section class="popular_courses" id="popular_courses_page" ng-app="CourseApp">
    <div class="container" ng-controller="CourseController" ng-init="CourseList()">
        <div class="row" >
            <div class="col-12 col-sm-6 col-md-6 col-lg-4" ng-repeat="e in record">
                <div class="single-courses">
                    <div class="courses_banner_wrapper">
                        <div class="courses_banner"><a href="#"><img src="~/Content/images/courses/courses_1.jpg" alt="" class="img-fluid"></a></div>
                        <div class="purchase_price">
                            <a href="#" class="read_more-btn">$150</a>
                        </div>
                    </div>
                    <div class="courses_info_wrapper">
                        <div class="courses_title">
                            <h3><a href="#">{{e.CourseName}}</a></h3>
                            <div class="teachers_name">Teachers:  <a href="#" title="">{{e.NumberOfTeachers}}</a></div>
                        </div>
                        <div class="courses_info">
                            <ul class="list-unstyled">
                                <li><i class="fas fa-user"></i>{{e.NumberOfStudents}} Students</li>
                            </ul>
                            <a href="#" class="cart_btn">View Course Grade</a>
                        </div>
                    </div>
                </div><!-- Ends: .single courses -->
            </div><!-- Ends: . -->



                <div class="pagination_blog">
                <ul>
                    <li><a href="#">1</a></li>
                    <li class="current"><a href="#">2</a></li>
                    <li><a href="#" class=""><i class='flaticon-right-arrow'></i></a></li>
                </ul>
            </div>
        </div>

    </div>
</section><!-- ./ End Courses Area section -->


