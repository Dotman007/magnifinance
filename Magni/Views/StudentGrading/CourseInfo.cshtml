@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div id="app">
        <section class="section">
        <div class="container mt-5">
            <div class="row" ng-init="GetStudentCourseAverage()" ng-app="StudentGradingApp" ng-controller="StudentGradingController">
                <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h4>
                                Course Information
                            </h4>
                        </div>
                        <div class="card-body ">
                            <form action="#">
                                <div>
                                    <table class="table table-striped table-bordered v_center" id="table-2">
                                        <thead>
                                            <tr>
                                                <th>Course Name</th>
                                                <th>Teachers</th>
                                                <th>Students</th>
                                                <th>Average Grade</th>
                                            </tr>
                                        </thead>
                                        <tbody ng-repeat="grader in studentGradeAverage">
                                            <tr>
                                                <td>{{grader.Name}}</td>
                                                <td>{{grader.TeacherCount}}</td>
                                                <td>{{grader.StudentCount}}</td>
                                                <td>{{grader.AvgGrade}}</td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="simple-footer">
                        Copyright &copy; CodiePie 2020
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
