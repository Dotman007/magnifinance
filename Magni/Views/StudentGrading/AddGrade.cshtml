            @foreach (Magni.Core.Dto.GradeDto item in @ViewBag.Grades)
            {
                <option value="@item.Point"  ng-model="grade.Name" class="form-control" id="inputEmail" placeholder="Course"  {{editable}}>@item.Name</option>
            }
        </select>*@

                                                    @*<select class="input-sm form-control" ng-model="selectedValue" ng-init="GradeList()" >
           <option ng-selected="{{grade.Name}}" ng-repeat="grade in gradeList" value="{{grade.Point}}" ng-disabled="editable">{{grade.Name}}</option>
        </select>*@


                                                    <select class="input-sm form-control" ng-model="grade.Name" ng-change="getGrade()">
                                                        <option  ng-repeat="grade in gradeList" value="{{grade.Point}}" ng-disabled="editable">{{grade.Name}}</option>
                                                    </select>

                                                    @*<select ng-init="GradeList()" class="input-sm form-control" ng-selected="true" ng-options="grade.Name for grade in gradeList| filter:{type:typeng.type}"
                ng-change="getGrade()" ng-disabled="editable">
        </select>*@
                                                </td>
                                                <td>
                                                    {{grade.Name}}
                                                </td>
                                            </tr>

                                            
                                            
                                        </tbody>

                                    </table>
                                    <div ng-show="IsVisible">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Total Subjects</th>
                                                    <th>Total Credit</th>
                                                    <th>Calculated GPA</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <tr>
                                                    <td>{{totalCourses}}</td>
                                                    <td>{{totalCredit}}</td>
                                                    <td></td>
                                                </tr>



                                            </tbody>
                                            </table>
                                    </div>
                                    <div>
                                        <input type="button" name="confirmGrade"  value="Confirm Grade"  ng-click="ConfirmGrade()"/>
                                        <input type="button" name="editGrade"  value="Edit Grade"  ng-click="EditGrade()"/>
                                    </div>
                                </div>
                            </div>


                            <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                                <input type="button" id="btnSave" class="form-control btn-space" value="Submit" ng-click="CreateEnrollment()" />
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Become A Instructor -->



