@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="become_a_instructor">
    <div class="container" ng-app="StudentGradingApp" ng-controller="StudentGradingController" ng-init="GradeList()">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                <div class="apply_instructor">
                    <div class="form_title">
                        <h3>AddGrade</h3>
                    </div>
                    <form action="#">
                        <div class="row">

                            <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label class="control-label">Students</label>

                                    <select ng-model="studentGrading.StudentId" ng-disabled="!studentGrading"
                                            class="input-sm form-control" ng-change="GetStudentCourse();GetStudentSubject();ShowHide();">
                                        @foreach (Magni.Core.Dto.StudentListDto item in @ViewBag.Students)
                                        {
                                            <option value="@item.Id" class="form-control" id="inputEmail" placeholder="Student Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label class="control-label">Course Name</label>
                                    <input type="text" class="form-control" id="inputEmail" placeholder="Unit" value="{{courseName}}">
                                </div>
                            </div>


                            <div class="col-12 col-lg-12 col-md-12 col-lg-12">
                                <div class="form-group">
                                    <label class="control-label">Subjects</label>

                                    <table class="table table-striped table-bordered" >
                                        <thead>
                                            <tr>
                                                <th>Subject Name</th>
                                                <th>Unit</th>
                                                <th>Grade</th>
                                                <th>Grade</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <tr ng-repeat="r in record">
                                                <td>{{r.SubjectName}}</td>
                                                <td>{{r.Unit}}</td>
                                                <td>
