@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div id="app">
    <section class="section">
        <div class="container mt-5">
            <div class="row" ng-init="GetStudentSubjectGrade()" ng-app="StudentGradingApp" ng-controller="StudentGradingController">
                <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h4>
                                Students Grade
                            </h4>
                        </div>
                        <div class="card-body">
                            <form action="#">
                                <div class="form-group">
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Student Name</th>
                                                <th>Grade Information</th>
                                            </tr>
                                        </thead>
                                        <tbody ng-repeat="grader in studentGradingList">
                                            <tr >
                                                <td><a ng-click="clickMe(grad)">{{grader.StudentName}}</a></td>
                                                
                                                <td>
                                                    <div>
                                                    
                                                        <br />
                                                        <table class="table table-striped table-bordered">
                                                            <thead>
                                                                <tr>
                                                                    <th>Subject</th>
                                                                    <th>Grade</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr ng-repeat="grad  in grader.StudentGradingInfoDtos">
                                                                    <td>{{grad.Subject}}</td>
                                                                    <td>{{grad.Grade}}</td>
                                                                </tr>
                                                            </tbody>
                                                        </table>
                                                        <br />
                                                    </div>
                                                </td>
                                            </tr>
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="simple-footer">
                        Copyright &copy; CodiePie 2020
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
