@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div id="app">
    <section class="section">
        <div class="container mt-5">
            <div class="row" ng-init="AllGrades()" ng-app="GradeApp" ng-controller="GradeController">
                <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h4>Add Student</h4>
                        </div>
                        <div class="card-body">
                            <form action="#">

                                <div class="form-group">
                                    <label for="email">Grade</label>
                                    <input id="gradeName" type="text" class="form-control" ng-model="grade.Name">
                                    <div class="invalid-feedback">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="email">Score</label>
                                    <input id="score" type="number" class="form-control" ng-model="grade.Score">
                                    <div class="invalid-feedback">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <input type="button" id="btnSave" class="form-control btn btn-primary btn-lg btn-block" value="Submit" ng-click="CreateGrade()" />
                                </div>

                                <div class="form-group">
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Grade</th>
                                                <th>Score</th>
                                            </tr>
                                        </thead>
                                        <tbody ng-repeat="sub in grades">
                                            <tr>
                                                <td>{{sub.Name}}</td>
                                                <td>{{sub.Score}}</td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </form>
                            <div class="card" style="display:none">
                                <div class="card-header">
                                    <h4>Modal Center</h4>
                                </div>
                                <div class="card-body">
                                    <p class="mb-2">You can change the modal position to center.</p>
                                    <button class="btn btn-primary" id="modal-2">Launch Modal</button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="simple-footer">
                        Copyright &copy; CodiePie 2020
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
