@{

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<div id="app">
    <section class="section">
        <div class="container mt-5">
            <div class="row" ng-init="AllSubjects();AllCourses();AllTeachers()" ng-app="SubjectApp" ng-controller="SubjectController">
                <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h4>Add Subject</h4>
                        </div>
                        <div class="card-body">
                            <form action="#">

                                <div class="form-group">
                                    <label for="email">Subject Name</label>
                                    <input id="subjectName" type="text" class="form-control" ng-model="subject.Name">
                                    <div class="invalid-feedback">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="email">Subject Unit</label>
                                    <input id="subjectUnit" type="text" class="form-control" ng-model="subject.Unit">
                                    <div class="invalid-feedback">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="email">Teacher Name</label>

                                    @*<select name="repeatSelect" id="repeatSelect" >
                <option ng-repeat="option in teachers" ng-model="subj.teacherId" >{{option.teacherId}}</option>
            </select>*@

                                    <select ng-model="subject.teacherId">
                                        <option ng-repeat="t in teachers">{{t.TeacherId}} </option>
                                    </select>
                                    @*<input id="teacherName" type="text" class="form-control" ng-model="subject.TeacherName">*@
                                    <div class="invalid-feedback">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="email">Course Name</label>
                                    @*<select name="repeatSelects" id="repeatSelects" >
                <option ng-repeat="opt in courses" ng-model="subj.courseId">{{opt.courseId}}</option>
            </select>*@

                                    <select ng-model="subject.courseId">
                                        <option ng-repeat="a in courses">{{a.CourseId}}</option>
                                    </select>
                                    @*<select>
                <option ng-repeat="a in courses">{{a.CourseId}}</option>
            </select>*@
                                    @*<input id="courseName" type="text" class="form-control" ng-model="subject.CourseName">*@
                                    <div class="invalid-feedback">
                                    </div>
                                </div>


                                <div class="form-group">
                                    <input type="button" id="btnSave" class="form-control btn btn-primary btn-lg btn-block" value="Submit" ng-click="AddSubject()" />
                                </div>

                                <div class="form-group">
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Course Name</th>
                                                <th>Teacher</th>
                                                <th>Course</th>
                                            </tr>
                                        </thead>
                                        <tbody ng-repeat="sub in record">
                                            <tr>
                                                <td>{{sub.Name}}</td>
                                                <td>{{sub.TeacherId}}</td>
                                                <td>{{sub.CourseId}}</td>
                                                @*<td><input type="button" id="btnSave" class="form-control btn btn-primary btn-lg btn-block" value="Delete" /></td>
                        <td><input type="button" id="btnSave" class="form-control btn btn-primary btn-lg btn-block" value="Update" /></td>
                        <td><input type="button" id="btnSave" class="form-control btn btn-primary btn-lg btn-block" value="Details" /></td>*@
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </form>
                            <div class="card" style="display:none">
                                <div class="card-header">
                                    <h4>Modal Center</h4>
                                </div>
                                <div class="card-body">
                                    <p class="mb-2">You can change the modal position to center.</p>
                                    <button class="btn btn-primary" id="modal-2">Launch Modal</button>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="simple-footer">
                        Copyright &copy; CodiePie 2020
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
